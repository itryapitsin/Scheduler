<style>
.modal-body {
    max-height: 800px;
}
</style>

<!-- ko if: $root.currentCalendar() !== undefined -->
<!-- ko if: $root.currentCalendar().currentScheduleUpdateForm() !== undefined -->
<div class="modal hide" id ="updsdialog" data-bind=" draggable: {handle: '.modal-header'}" style="cursor:move; width:400px;  overflow-x:hidden; ">
    <div class="modal-header" style="overflow-x:hidden;">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h5>Редактирование занятия</h5>
    </div>
    <div class="modal-body" style="overflow-x:hidden; overflow-y:hidden;">
        <table>
              <tr>
                <th style="text-align:left;"><strong>Идет с</strong></th>
                <th style="text-align:left;"><strong>Идет по</strong></th>
              </tr>
            <tr>
                <td>
                <input style="width:150px; height:30px;" type="date" id="startDate" data-bind="value:$root.currentCalendar().currentScheduleUpdateForm().currentStartDate, valueUpdate: 'blur'"/> 
                </td>
                <td>
                <input  style="width:150px; height:30px;" type="date" id="endDate" data-bind="value:$root.currentCalendar().currentScheduleUpdateForm().currentEndDate, valueUpdate: 'blur'" />
                </td>
               </tr>
          </table>
        <strong>День недели</strong>
        <select style="width:100%"  data-placeholder="Выберите день недели" class="span5" id="dayofweek" data-bind="options: $root.currentCalendar().currentScheduleUpdateForm().days, optionsText: 'Name', value: $root.currentCalendar().currentScheduleUpdateForm().currentDay">
            <option></option>
        </select>

        <strong>Тип недели</strong>
        <select style="width:100%"  data-placeholder="Выберите тип недели" class="span5" id="weektype" data-bind="options: $root.currentCalendar().currentScheduleUpdateForm().weekTypes, optionsText: 'Name', value: $root.currentCalendar().currentScheduleUpdateForm().currentWeekType">
            <option></option>
        </select>

        <strong>Время</strong>     
        <select style="width:100%" data-placeholder="Выберите время" class="span5" id="times" data-bind="options: $root.currentCalendar().currentScheduleUpdateForm().times, optionsText: 'StartEnd', value: $root.currentCalendar().currentScheduleUpdateForm().currentTime">
            <option></option>
        </select>

         <strong>Тип аудитории</strong>
        <select style="width:100%"  data-placeholder="Выберите тип аудитории" class="span5" id="auditoriumType" data-bind="options: $root.currentCalendar().currentScheduleUpdateForm().auditoriumTypes, optionsText: 'Name', value: $root.currentCalendar().currentScheduleUpdateForm().currentAuditoriumType">
            <option></option>
        </select>

        <strong>Аудитория</strong>
        <select style="width:100%"  data-placeholder="Выберите аудиторию" class="span5" id="auditorium" data-bind="options: $root.currentCalendar().currentScheduleUpdateForm().auditoriums, optionsText: 'Number', value: $root.currentCalendar().currentScheduleUpdateForm().currentAuditorium">
            <option></option>
        </select>

        <strong>Подгруппа</strong>
        <select style="width:100%"  data-placeholder="Выберите подгруппу" class="span5" id="subgroup" data-bind="options: $root.currentCalendar().currentScheduleUpdateForm().subGroups, value: $root.currentCalendar().currentScheduleUpdateForm().currentSubGroup">
            <option></option>
        </select>

    </div>
    <div class="modal-footer" style="overflow-x:hidden;">
        <input id="updateScheduleOkButton" type="button" class="btn btn-primary" value="Изменить" data-bind="event:{click:$root.currentCalendar().currentScheduleUpdateForm().updateButtonClick.bind($data,true)}" />
        <a  style="cursor:pointer;" data-bind="event:{click:$root.currentCalendar().currentScheduleUpdateForm().cancelButtonClick.bind($data,true)}">Отмена</a>
    </div>
</div>
<!-- /ko --> 
<!-- /ko --> 



