@{
    ViewBag.Title = "Аудитории";
}

<head>
		<meta http-equiv="Content-type" content="text/html; charset=utf-8">
		<meta name="viewport" content="width=device-width" />		
        <title>@ViewBag.Title</title>    
        <link rel="stylesheet" type="text/css" href="@System.Web.Optimization.BundleTable.Bundles.ResolveBundleUrl("~/Content/themes/base/css")" />
        <link rel="stylesheet" type="text/css" href="@System.Web.Optimization.BundleTable.Bundles.ResolveBundleUrl("~/Content/bootstrap")" />
        <link rel="stylesheet" type="text/css" href="@System.Web.Optimization.BundleTable.Bundles.ResolveBundleUrl("~/Content/jqwidgets")" />
        <link rel="stylesheet" type="text/css" href="@System.Web.Optimization.BundleTable.Bundles.ResolveBundleUrl("~/Content/css")" />
	
		
        <script src="@System.Web.Optimization.BundleTable.Bundles.ResolveBundleUrl("~/Scripts/jquery")"></script>
        <script src="@System.Web.Optimization.BundleTable.Bundles.ResolveBundleUrl("~/Scripts/knockout")"></script>
        <script src="@System.Web.Optimization.BundleTable.Bundles.ResolveBundleUrl("~/Scripts/modernizr")"></script>
        <script src="@System.Web.Optimization.BundleTable.Bundles.ResolveBundleUrl("~/Scripts/bootstrap")"></script>
        <script src="@System.Web.Optimization.BundleTable.Bundles.ResolveBundleUrl("~/Scripts/jqwidgets")"></script>
        <script src="@System.Web.Optimization.BundleTable.Bundles.ResolveBundleUrl("~/Scripts/dojo")"></script>
</head>


<script type='text/javascript' src="@Url.Content("~/Scripts/jquery-1.9.1.js")"></script>
<script type='text/javascript' src="@Url.Content("~/Scripts/bootstrap.js")"></script>

<link href="@Url.Content("~/Content/resources/css/ext-all.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Scripts/Site/data.model.js")" rel="stylesheet" type="text/css" />



<script src="@Url.Content("~/Scripts/ext-all.js")" type="text/javascript"></script>  

<script type='text/javascript' src="@Url.Content("~/Scripts/Site/Database/auditorium.database.js")"></script>
<script type='text/javascript' src="@Url.Content("~/Scripts/Site/data.model.js")"></script>
<script type='text/javascript' src="@Url.Content("~/Scripts/knockout-2.1.0.js")"></script>






<style>
.modal-backdrop {background: white;}
</style>
 

<div id="header">
@Content.Navbar("DatabaserLink", this)
</div>

<div class="auditoriumselect" id="bar11" style="float: left; margin-left:0px; width:100%;">
                <strong>Выберите здание</strong> <br />
                <select style="width:100%"  data-placeholder="Выберите здание" class="span5" id="buildings" data-bind="options: $root.selectBuildings, optionsText: 'Name', value: $root.selectCurrentBuilding">
                    <option></option>
                </select> <br />
               <strong>Выберите тип аудитории</strong> <br />
               <select style="width:100%"  data-placeholder="Выберите тип аудитории" class="span5" id="auditoriumType" data-bind="options: $root.selectAuditoriumTypes, optionsText: 'Name', value: $root.selectCurrentAuditoriumType">
                    <option></option>
                </select> <br />
               <br />
               <input style="width:90px;" type="button" class="btn enabled" value="Добавить" data-bind="click:  $root.addButtonShowModal" />
               <input style="width:90px;" type="button" class="btn enabled" value="Удалить" data-bind="click:  $root.delButton" />
              
     </div>    

    

 <div id ="grid11" style="float:left; width: 100%; margin-left:0px;">
 </div>

<div class="modal hide fade" id ="addmodal" style="width:400px; overflow-x:hidden;">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h5>Поменять аудиторию</h5>
  </div>
  <div class="modal-body">
    <span>Номер</span>
    <input style="width:100%"  placeholder="Введите номер" class="span5" id="auditoriumnumber" data-bind="value: $root.addNumber, valueUpdate: 'afterkeydown'"/>
    <div class="alert alert-error" id="numberError">
          <span data-bind="text:$root.numberErrorMsg()"></span>
    </div>
    <span>Название</span>
    <input style="width:100%"  placeholder="Введите название" class="span5" id="auditoriumnam" data-bind="value: $root.addName, valueUpdate: 'afterkeydown'"/>
    <span>Вместимость</span>
    <input style="width:100%"  placeholder="Введите вместимость" class="span5" id="auditoriumcapacity" data-bind="value: $root.addCapacity, valueUpdate: 'afterkeydown'"/>
    <div class="alert alert-error" id="capacityError">
         <span data-bind="text:$root.capacityErrorMsg()"></span>
    </div>
    <span>Дополнительная информация</span>
    <textarea style="width:100%" placeholder="Введите информацию об аудитории" class="span5" id="auditoriuminfo" data-bind="value: $root.addInfo, valueUpdate: 'afterkeydown'"> </textarea>
  </div>
  <div class="modal-footer">
      <input style="width:90px;" type="button" class="btn btn-primary disabled" id="addButton" value="Добавить" data-bind="click:  $root.addButton" />
      <input style="width:90px;" type="button" class="btn enabled" value="Отмена" data-bind="click:  $root.buttonModalClose" />
  </div>
</div>

<script type="text/javascript">

</script>