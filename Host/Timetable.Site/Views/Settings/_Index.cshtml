<div class="container" style="margin-top: 50px;">
    <div class="row">
        <div class="accordion" id="accordion2">
            <div class="accordion-group">
                <div class="accordion-heading">
                    <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#collapseOne">
                        Настройки пользователя
                    </a>
                </div>
                <div id="collapseOne" class="accordion-body collapse">
                    <div class="accordion-inner">
                        <form class="form-horizontal">
                            <div class="control-group">
                                <label class="control-label">Фамилия</label>
                                <div class="controls">
                                    <input type="text" class="span7" placeholder="Фамилия">
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label">Имя</label>
                                <div class="controls">
                                    <input type="text" class="span7" placeholder="Имя">
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label">Отчество</label>
                                <div class="controls">
                                    <input type="text" class="span7" placeholder="Отчество">
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label">Новый пароль</label>
                                <div class="controls">
                                    <input type="password" class="span7" placeholder="Новый пароль">
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label">Повтор нового пароля</label>
                                <div class="controls">
                                    <input type="password" class="span7" placeholder="Повтор нового пароля">
                                </div>
                            </div>
                            <div class="control-group">
                                <div class="controls">
                                    <button type="submit" class="btn">Сохранить</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="accordion-group">
                <div class="accordion-heading">
                    <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#collapseTwo">
                        Управление пользователями
                    </a>
                </div>
                <div id="collapseTwo" class="accordion-body collapse">
                    <div class="accordion-inner">
                        Anim pariatur cliche...
                    </div>
                </div>
            </div>
            <div class="accordion-group">
                <div class="accordion-heading">
                    <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#refreshData">
                        Обновление данных
                    </a>
                </div>
                <div id="refreshData" class="accordion-body collapse">
                    <div class="accordion-inner">
                        <button class="btn" ng-click="refreshLogClick()"><i class="icon icon-refresh"></i> Обновить</button>
                        &nbsp;
                        <span>Дата и время последнего обновления: </span>
                        <br/>
                        <ol>
                            <li ng-repeat="log in logs">{{log}}</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>