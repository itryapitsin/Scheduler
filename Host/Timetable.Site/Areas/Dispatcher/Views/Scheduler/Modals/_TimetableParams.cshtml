<script type="text/ng-template" id="timetableparams.modal.html">
    <div class="modal-dialog" style="width: 750px;" ng-controller="TimetableParamsDialogController">
        <div class="modal-content">
            <div class="modal-header">
                <h3 id="myModalLabel">Параметры расписания</h3>
            </div>
            <div class="modal-body">
                <form class="form-horizontal" role="form" name="form">
                    <div class="form-group" ng-class="{'has-error': form.login.$error.required}">
                        <label class="col-sm-2 control-label">Учебный год</label>
                        <div class="col-sm-8">
                            <select class="form-control" required="required" ng-model="currentStudyYearId" ng-options="studyYear.id as studyYear.name for studyYear in studyYears"></select>
                        </div>
                    </div>
                    <div class="form-group" ng-class="{'has-error': form.login.$error.required}">
                        <label class="col-sm-2 control-label">Семестр</label>
                        <div class="col-sm-8">
                            <select class="form-control" required="required" ng-model="currentSemesterId" ng-options="semestr.id as semestr.name for semestr in semesters"></select>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <div class="pull-left text-danger" ng-show='message'>
                    <i class="glyphicon glyphicon-exclamation-sign"></i>&nbsp;<b>{{message}}</b>
                </div>
                <button class="btn btn-success" ng-click="ok()">OK</button>&nbsp;
                <button class="btn" ng-click="cancel()">Закрыть</button>
            </div>
        </div>
    </div>
</script>