<script type="text/ng-template" id="thread.modal.html">
    <div class="modal-dialog" style="width: 750px;" ng-controller="ThreadDialogController">
        <div class="modal-content">
            <div class="modal-header">
                <h4>Выбор потока</h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal" role="form" name="form">
                    <div class="form-group" ng-class="{'has-error': form.login.$error.required}">
                        <label class="col-sm-2 control-label">Филиал</label>
                        <div class="col-sm-8">
                            <select class="form-control" ng-model="currentBranchId" ng-change="changeBranch()" ng-options="branch.id as branch.name for branch in branches"></select>
                        </div>
                    </div>
                    <div class="form-group" ng-class="{'has-error': form.login.$error.required}">
                        <label class="col-sm-2 control-label">Факультет</label>
                        <div class="col-sm-8">
                            <select class="form-control" ng-model="currentFacultyId" ng-change="changeFaculty()" ng-options="faculty.id as faculty.name for faculty in faculties"></select>
                        </div>
                    </div>
                    <div class="form-group" ng-class="{'has-error': form.login.$error.required}">
                        <label class="col-sm-2 control-label">Курс</label>
                        <div class="col-sm-8">
                            <select class="form-control" ng-model="currentCourseId" ng-change="changeCourse()" ng-options="course.id as course.name for course in courses"></select>
                        </div>
                    </div>
                    <div class="form-group" ng-class="{'has-error': form.login.$error.required}">
                        <label class="col-sm-2 control-label">Группа</label>
                        <div class="col-sm-8">
                            <select class="form-control" multiple="multiple" ng-model="currentGroupIds" ng-options="group.id as group.code for group in groups"></select>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <div class="pull-left text-danger" ng-show='message'>
                    <i class="glyphicon glyphicon-exclamation-sign"></i>&nbsp;<b>{{message}}</b>
                </div>
                <button class="btn btn-success" ng-click="ok()">OK</button>&nbsp;
                <button class="btn" ng-click="cancel()">Отмена</button>
            </div>
        </div>
    </div>
</script>
