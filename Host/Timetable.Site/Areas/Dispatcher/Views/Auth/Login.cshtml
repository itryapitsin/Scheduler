@model Timetable.Site.Areas.Dispatcher.Models.RequestModels.SignInRequest

@{
    ViewBag.Title = "Вход в систему";
    Layout = null;
}
<!DOCTYPE html>
<html ng-app="scheduler">
<head>
    <meta http-equiv="Content-type" content="text/html; charset=utf-8">
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/signin")
</head>
<body>
    <div class="container">
        <section class="main">
            <form class="form-1" method="POST" action="@Url.Action("Login", "Auth")">
                <p class="field">
                    <input type="text" name="UserName" placeholder="Логин">
                    <i class="icon-user icon-large"></i>
                </p>
                <p class="field">
                    <input type="password" name="Password" placeholder="Пароль">
                    <i class="icon-lock icon-large"></i>
                </p>
                <p class="submit">
                    <button type="submit" name="submit"><i class="icon-arrow-right icon-large"></i></button>
                </p>
            </form>
            @Html.ValidationSummary()
        </section>
    </div>
</body>
</html>






