@using Timetable.Site.Infrastructure

<h2>Session schedule</h2>

<div class="navbar navbar-default navbar-fixed-top navbar-child" role="navigation" style="top:51px;">
    <div class="navbar-inner">
        <div class="container">
            <form class="navbar-form navbar-left" style="width: 100%;">

                <input id="period" style="left:0px; float:left;" required="required" class="form-control" daterangepicker />
                <div class="form-group col-sm-3">
                    <select class="form-control" required="required" ng-model="currentBranchId" ng-change="changeBranch()" ng-options="branch.id as branch.name for branch in branches"></select>
                </div>
             
                <div class="form-group col-sm-3">
                    <select class="form-control" required="required" ng-model="currentFacultyId" ng-change="changeFaculty()" ng-options="faculty.id as faculty.name for faculty in faculties"></select>
                </div>

                <div class="form-group col-sm-3">
                    <select class="form-control" required="required" ng-model="currentCourseId" ng-change="changeCourse()" ng-options="course.id as course.name for course in courses"></select>
                </div>
   
            </form>
        </div>
    </div>
</div>
<div class="row-fluid" style="position: absolute; left: 0px; width: 100%; top: 100px; bottom:0; overflow-y: scroll;">
    <table class="table table-bordered table-striped" style="margin-bottom: 0">
        <thead>
            <tr class="info">
                <th style="min-width: 200px; width: 200px">Предмет</th>
                <th ng-repeat="period in periods"> {{period}}</th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="tutorial in tutorials">
                <td style="min-width: 200px; width:200px;">{{tutorial}}</td>
                <td ng-repeat="period in periods">
                </td>
            </tr>
        </tbody>
    </table>

</div>

@{ var model = new JsonNetResult(Model); }
<script>
    try {
        window.pageModel = @Html.Raw(model.JsonText.Replace("\\","\\\\"));
    } catch(e) {
        console.log(e);
    }
</script>
