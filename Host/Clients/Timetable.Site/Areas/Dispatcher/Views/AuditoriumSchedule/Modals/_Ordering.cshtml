<script type="text/ng-template" id="ordering.modal.html">
    <div class="modal-dialog" style="width: 750px;" ng-controller="OrderingDialogController">
        <div class="modal-content">
            <div class="modal-header">
                <h4 id="myModalLabel">Заказ аудитории {{ selectedAuditorium.number }} на {{ selectedDayOfWeek.name }} {{selectedTime.name}} </h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal" role="form" name="form">

                    <div class="form-group" ng-class="{'has-error': form.login.$error.required}">
                        <label class="col-sm-2 control-label">Имя преподавателя</label>
                        <div class="col-sm-8">
                            <input class="form-control" ng-model="lecturerName" />
                        </div>
                    </div>

                    <div class="form-group" ng-class="{'has-error': form.login.$error.required}">
                        <label class="col-sm-2 control-label">Название занятия</label>
                        <div class="col-sm-8">
                            <input class="form-control" ng-model="tutorialName" />
                        </div>
                    </div>

                    <div class="form-group" ng-class="{'has-error': form.login.$error.required}">
                        <label class="col-sm-2 control-label">Название потока</label>
                        <div class="col-sm-8">
                            <input class="form-control" ng-model="threadName" />
                        </div>
                    </div>

                    <div class="form-group" ng-class="{'has-error': form.login.$error.required}">
                        <label class="col-sm-2 control-label">Автоудаление</label>
                        <div class="col-sm-8">
                            <select class="form-control" ng-model="currentAutoDeleteState" ng-options="autoDelete.state as autoDelete.name for autoDelete in autoDeletes"></select>
                        </div>
                    </div>
            </form>
        </div>
            <div class="modal-footer">
                <div class="pull-left text-danger" ng-show='message'>
                    <i class="glyphicon glyphicon-exclamation-sign"></i>&nbsp;<b>{{message}}</b>
                </div>
                <button class="btn btn-success" ng-click="ok()">Применить</button>&nbsp;
                <button class="btn" ng-click="cancel()">Закрыть</button>
            </div>
        </div>
    </div>
</script>