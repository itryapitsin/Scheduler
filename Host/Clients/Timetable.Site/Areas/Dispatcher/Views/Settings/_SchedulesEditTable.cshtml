<div class="form-group col-sm-2 col-sm-offset-0" ng-init="loadTableData()">
<select class="form-control" required="required" ng-change="branchChanged()" ng-model="currentBranchId" ng-options="branch.id as branch.name for branch in branches"></select>
</div>

<div class="form-group col-sm-2 col-sm-offset-0">
<select class="form-control" required="required" ng-change="facultyChanged()" ng-model="currentFacultyId" ng-options="faculty.id as faculty.name for faculty in faculties"></select>
</div>
<div class="form-group col-sm-2 col-sm-offset-0">
<select class="form-control" required="required" ng-change="courseChanged()" ng-model="currentCourseId" ng-options="course.id as course.name for course in courses"></select>
</div>

<div class="form-group col-sm-2 col-sm-offset-0">
<select class="form-control" required="required" ng-change="groupChanged()" ng-model="currentGroupId" ng-options="group.id as group.code for group in groups"></select>
</div>

<div class="form-group col-sm-2 col-sm-offset-0">
<select class="form-control" required="required" ng-change="studyTypeChanged()" ng-model="currentStudyTypeId" ng-options="studyType.id as studyType.name for studyType in studyTypes"></select>
</div>

<div class="form-group col-sm-2 col-sm-offset-0">
<select class="form-control" required="required" ng-change="studyYearChanged()" ng-model="currentStudyYearId" ng-options="studyYear.id as studyYear.name for studyYear in studyYears"></select>
</div>

<div class="form-group col-sm-2 col-sm-offset-0">
<select class="form-control" required="required" ng-change="semesterChanged()" ng-model="currentSemesterId" ng-options="semester.id as semester.name for semester in semesters"></select>
</div>

<div class="form-group col-sm-2 col-sm-offset-0 pull-right">
<button class="btn btn-success" ng-click="showCreateScheduleDialog()"><i class="glyphicon glyphicon-plus"></i> Создать занятие</button>
&nbsp;
</div>

<table class="table table-striped">
       <thead>
            <tr>
               <th>Автоудаление</th>
               <th>Дата начала</th>
               <th>Дата окончания</th>
               <th>Аудитория</th>
               <th>Здание</th>
               <th>Преподаватель</th>
               <th>Предмет</th>
               <th>Тип предмета</th>
               <th>Группы</th>
               <th>Тип недели</th>
               <th>Время</th>
               <th>Номер пары</th>
               <th>День недели</th>
            </tr>
       </thead>
       <tbody>
            <tr ng-repeat="schedule in schedules">
               <td>{{schedule.autoDelete}}</td>
               <td>{{schedule.startDate}}</td>
               <td>{{schedule.endDate}}</td>
               <td>{{schedule.auditoriumNumber}}</td>
               <td>{{schedule.buildingName}}</td>
               <td>{{schedule.lecturerName}}</td>
               <td>{{schedule.tutorialName}}</td>
               <td>{{schedule.groupCodes.join(", ")}}</td>
               <td>{{schedule.weekTypeName}}</td>
               <td>{{schedule.subGroup}}</td>
               <td>{{schedule.time.start + "-" + schedule.time.end}}</td>
               <td>{{schedule.pair}}</td>
               <td>{{schedule.dayOfWeek}}</td>
               <td class="col-sm-1">
                       <button class="btn btn-sm btn-warning" ng-click="edit(schedule)"><i class="glyphicon glyphicon-edit"></i></button>
                       <button class="btn btn-sm btn-danger" ng-click="delete(schedule)"><i class="glyphicon glyphicon-remove"></i></button>
               </td>
            </tr>
       </tbody>
</table>
            